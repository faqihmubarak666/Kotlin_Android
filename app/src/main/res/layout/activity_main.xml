<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="end"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/delCalc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:tag="del"
            android:text="DEL"
            android:textAlignment="center"
            android:textSize="34dp"
            app:backgroundTint="#CFC2C7" />

        <Button
            android:id="@+id/equalCacl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:tag="="
            android:text="="
            android:textAlignment="center"
            android:textSize="34dp"
            app:backgroundTint="#CFC2C7" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/oneCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:tag="1"
                android:text="1"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/twoCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="2"
                android:text="2"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/threeCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="3"
                android:text="3"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/divisionCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="/"
                android:text="/"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/fourCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:tag="4"
                android:text="4"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/fiveCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="5"
                android:text="5"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/sixCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="6"
                android:text="6"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/subtractionCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="-"
                android:text="-"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/sevenCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:tag="7"
                android:text="7"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/eightCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="8"
                android:text="8"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/nineCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="9"
                android:text="9"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/multiplyCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="x"
                android:text="x"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/clearCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:tag="CE"
                android:text="CE"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/zeroCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="0"
                android:text="0"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/percentCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="%"
                android:text="%"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />

            <Button
                android:id="@+id/additionCalc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:tag="+"
                android:text="+"
                android:textAlignment="center"
                android:textSize="34dp"
                app:backgroundTint="#CFC2C7" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>